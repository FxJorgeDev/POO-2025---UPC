#EJERCICIO 15

def reverso(num):
  num = int(num)
  num1 = str(num)
  num2 = num1[::-1]
  num3 = int(num2)
  print("El numero al reverso ", num3)
num = int(input("Ingrese un numero mayor a 99: "))
reverso(num)
if num > 99 and num < 50000:
 if num >= 100 and num < 1000:
    if num % 10 == num // 100:
      print("El numero es CAPICUA")
    else:
       num1 = str(num)
       num2 = num1[::-1]
       num3 = int(num2)
       print("La suma de los numeros es", num + num3) 
 if num >= 1000 and num < 10000:
   num1 = str(num)
   num2 = num1[::-1]
   num3 = int(num2)
   if num == num3:
     print("El numero es CAPICUA")
   else:
     print(num, "+", num3, "La suma es ", num + num3)
 if num >= 10000 and num < 100000:
   num1 = str(num)
   num2 = num1[::-1]
   num3 = int(num2)
   if num == num3:
     print("El numero es CAPICUA")
   else:
     print(num, "+", num3, "La suma es ", num + num3)
else:
  print("El numero ingresado solo tiene que ser de 3 a 5 cifras...")

