def mayor(a,b,c):
    if a > b and a > c:
        print (a)
    elif b > a and b > c:
        print(b)
    else:
        print(c)
def menor(a,b,c):
    if a < b and a < c:
        print(a)
    elif b < c and b < a:
        print(b)
    else:
        print(c)
def medio(a,b,c):
    if a < b and a > c:
        print(a)
    elif b < c and b > a:
        print(b)
    else:
        print(c)

