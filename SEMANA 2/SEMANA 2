def descendente(a, b, c):
 
  if a >= b and a >= c:
    print(a)
  elif b >= a and b >= c:
   print (b)
  else:
    print(c)

  if a >= b and a <= c:
    print(a)
  elif b >= a and b <= c:
   print (b)
  else:
    print(c)

  if  a <= b and a < c:
    print(a)
  elif b <= a and b <= c:
   print (b)
  else:
    print(c)


try:
  a = int(input("Ingrese el valor de a: "))
  b = int(input("Ingrese el valor de b: "))  
  c = int(input("Ingrese el valor de c: "))     
except ValueError:
  print("Ingrese solo variables enteras..........")

descendente(a,b,c)  """

